{
	"compilerOptions": {
		"composite": true,
		"strict": true,
		"skipLibCheck": true,
		"module": "nodenext",
		"moduleResolution": "NodeNext",
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"#/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"index.ts",
		"src/**/*.ts"
	]
}